
  <h1><%= @category.name %></h1>
  <p><strong>Created:</strong> <em><%= @category.created_at.strftime('%d, %b, %Y') %></em></p>
  <h3>Articles under this category</h3>
  <p>
    <% @category.articles.order(:updated_at).each do |article| %>
      <p><%= link_to article.title, article %></p>
    <% end %>
  </p>
