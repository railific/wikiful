

  <h1>Articles</h1>
  <h4>By most recent</h4>
  <% @articles.each do |article| %>
    <div>
      <h4><%= link_to article.title, article %></h4>
      <strong>Published:</strong> <em><%= article.created_at.strftime('%d, %b, %Y') %></em>&nbsp;&nbsp;&nbsp;
      <strong>Category:</strong> <% article.categories.each do |category| %>
                  <em><%= category.name %></em>&nbsp;
                <% end %>      
      <p><%= truncate(article.content, length: 200) %></p></br>
    </div>
  <% end %>

