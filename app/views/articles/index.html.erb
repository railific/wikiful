  <h1>Articles</h1>
  <h4>By most recent</h4>
  <% @articles.each do |article| %>
    <div>
      <h4><%= link_to article.title, article %></h4>
      Published: <%= article.created_at.strftime('%d, %b, %Y') %>&nbsp;&nbsp;&nbsp;
      Category: <% article.categories.each do |category| %>
                  <%= category.name %>&nbsp;
                <% end %>      
      </br></br><p><em><%= truncate(article.content, length: 200) %></em></p>
    </div>
  <% end %>