  <h1>This is the index view for Articles</h1>
  <% @articles.each do |article| %>
    <div>
      <h3><%= article.title %></h3>
            <p>Published on <%= article.created_at.strftime('%b %d, %Y') %></p>
      <p>Filed under: <% article.categories.each do |category| %>
                        <%= category.name %>&nbsp;
                      <% end %>
      </p>
      <p><%= truncate(article.content, length: 200) %></p>
    </div>
  <% end %>